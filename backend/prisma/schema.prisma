// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  role      String    @default("user")
  count     Int       @default(0)
  projects  Project[]
  tasks     Task[]
  subtasks  SubTask[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Project {
  id          String   @id @default(uuid())
  name        String
  description String?
  ownerId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  users       User[]
  tasks       Task[]

  @@unique([id, ownerId], name: "projectId_ownerId")
}

model Task {
  id          String    @id @default(uuid())
  name        String
  ownerId     String
  description String?
  date        DateTime? @db.Date
  completed   Boolean?  @default(false)
  users       User[]
  subTasks    SubTask[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId   String

  @@unique([id, ownerId], name: "taskId_ownerId")
  @@unique([id, projectId], name: "taskId_projectId")
}

model SubTask {
  id          String    @id @default(uuid())
  name        String
  ownerId     String
  description String?
  completed   Boolean?  @default(false)
  date        DateTime? @db.Date
  task        Task      @relation(fields: [taskId], references: [id], onDelete: Cascade)
  taskId      String
  users       User[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([id, ownerId], name: "subTaskId_ownerId")
  @@unique([id, taskId], name: "subTaskId_taskId")
}
